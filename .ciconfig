pipeline {
  agent any
  options {
    skipDefaultCheckout true
  }
  stages {
    stage('install') {
      steps {
        dir('linkurious-rest-client') {
          checkout scm
          sh 'npm install'
        }
        dir('linkurious-server') {
          git branch: 'develop', credentialsId: 'dd38fcea-d471-4856-a009-4029127c6450', url: 'git@github.com:Linkurious/linkurious-server.git'
          sh 'npm install'
        }
      }
    }
    stage('unit tests') {
      steps {
        throttle(['FrontendTestEnv']) {
          dir('linkurious-rest-client') {
            sh 'node ../linkurious-server/test/runMocha.js -s & echo $! > SERVER_PID'
            sh 'xvfb-run npm run compileTests && npm run lint'
            sh 'istanbul cover --root ../linkurious-server/server/services/webServer/routes --report html --dir cover_API node_modules/.bin/karma start karma.conf.js'
            sh 'kill -9 `cat SERVER_PID`'
          }
        }
      }
    }
  }
  post {
    always {
      // Terminate Linkurious Server
      sh 'kill -9 `cat SERVER_PID` || true'
    }
  }
}
