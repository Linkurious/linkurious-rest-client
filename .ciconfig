pipeline {
  agent any
  options {
    skipDefaultCheckout true
  }
  stages {
    stage('Install') {
      steps {
        dir('linkurious-rest-client') {
          checkout scm
          sh 'npm install'
        }
      }
    }
    stage('Pre-release') {
      steps {
        dir('linkurious-rest-client') {
          withCredentials([file(credentialsId: 'apikey', variable: 'API_KEY')]) {
            sh 'echo \'{"apiKey":"\'`cat $API_KEY`\'","owner":"Linkurious"}\' > scripts/github/static_info.json'
          }
          sh './node_modules/.bin/tsc'
          sh 'node ./scripts/pushBranch.js'
        }
      }
    }
  }
}
