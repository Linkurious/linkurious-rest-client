{
  "compilerOptions": {
    "target" : "ES6",
    "module": "commonjs",
    "removeComments": false,
    "sourceMap": true,
    "declaration": false,
    "outDir": "./built",
    "noImplicitAny": true,
    "allowJs": false,
    "charset": "utf8",
    "emitBOM": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "crlf",
    "noImplicitReturns": true,
    "stripInternal": true
  },
  "filesGlob": [
    "src/*.ts",
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "built",
    "coverage"
  ]
}
