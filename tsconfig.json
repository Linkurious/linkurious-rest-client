{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "inlineSourceMap": true,
    "noImplicitReturns": true,
    "incremental": true,
    "lib": ["es5", "dom"],
    "target": "es5",
    "noUnusedLocals": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
